{
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 110,
  "editor.rulers": [110],
  "[markdown]": {
    // Provide granular quick suggestion control (boolean not allowed in language override)
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    },
    "editor.wordWrap": "on",
    "editor.formatOnSave": true
  },
  "markdown.extension.toc.levels": "2..4",
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.preview.breaks": false,
  "markdown.preview.doubleClickToSwitchToEditor": true,
  "markdown.styles": [
    "${workspaceFolder}/.vscode/markdown-theme.css"
  ],
  "markdownlint.config": {
    // MD013 line length disabled (intentional wide tables)
    "MD013": false,
    // MD033 inline HTML allowed if we add anchors later
    "MD033": false,
    // Allow trailing spaces used for deliberate hard line breaks
    "MD009": false,
    // Permit multiple consecutive blank lines during drafting
    "MD012": false
  },
  "pasteImage.path": "images",
  "pasteImage.insertPattern": "![](${imagePath})"
}